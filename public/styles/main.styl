@import "../vendor/bootstrap/css/bootstrap.css"

body
  padding-top 70px

.navbar .username
  padding-left: 50px;
  cursor pointer
.navbar .profilepic
  border-radius: 3px;
  top: 10px;
  left: 10px;
  position: absolute;
  width: 30px;

.welcome-hero
  height: 600px;
  background-image: url("/images/bg.jpg");
  margin: -20px 0 0 0;
  background-size: 100%;
  background-position-y: 48%;
  .signup
    color: #fff;
    position: relative;
    top: 30px;
    left 50px
    width: 300px;
    text-align: center;
    h1
      font-size: 60px;
    h2
      margin-top 5px;
      font-size: 40px;
    hr
      border-top: 2px solid rgba(255, 255, 255, 0.39);
      height: 4px;
      width: 130px;
      margin: 0 auto;
    p
      font-size: 24px;
    .btn
      width: 100%;
      padding: 10px;
      font-size: 18px;
      margin-top: 10px;


.filter
  margin-bottom: 10px;
.lessons
  .lesson
    cursor: pointer;
    width: 260px;
    border: 1px solid #CCCCCC;
    border-radius: 6px;
    height: 250px;
    display: inline-block;
    margin: 0 25px 25px 0;
    position: relative
    background-size: 100%;
    background-position: initial !important;
    background-repeat: initial !important;
    .info
      position: absolute;
      bottom: 0px;
      background: white;
      width: 100%;
      padding: 10px;
      border-radius: 0 0 4px 4px;
      padding: 5px 10px;
      height: 75px;
      .lessonDetails
        text-align: center;
        position: absolute;
        bottom: 5px;
        width: 238px;
        font-size: 13px;

.lessons-hero
  color white
  height: 200px;
  background-image: url("/images/bg.jpg");
  margin: -20px 0 0 0;
  background-size: 100%;
  background-position-y: 48%;

.lesson
  .image
    height 400px;
    overflow hidden
    img
      width: 100%
